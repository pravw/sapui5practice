<mvc:View 
controllerName="sap.ui.demo.project1.controller.App"
    xmlns="sap.m"
    xmlns:f= "sap.ui.layout.form"
    xmlns:t="sap.ui.table"
    xmlns:mvc="sap.ui.core.mvc">
    <App >
    <Page>
    
    <content>
      <t:Table rows ="{hello>/empTab}" selectionMode="Single" >
      <t:columns>
       <t:Column >
       <t:label>
       <Label text = "Emp No" ></Label>
       </t:label>
       <t:template>
      <Text text="{hello>empNo}"></Text>
       </t:template>
       </t:Column>
              <t:Column >
       <t:label>
       <Label text = "Emp Name" ></Label>
       </t:label>
       <t:template>
      <Text text="{hello>eName}"></Text>
       </t:template>
       </t:Column>       <t:Column >
       <t:label>
       <Label text = "Emp Salary" ></Label>
       </t:label>
       <t:template>
      <Text text="{hello>salary}"></Text>
       </t:template>
       </t:Column>       <t:Column >
       <t:label>
       <Label text = "Currency" ></Label>
       </t:label>
       <t:template>
      <Text text="{hello> currency}"></Text>
       </t:template>
       </t:Column>
      </t:columns>
      </t:Table>
    <f:SimpleForm>
    <f:content>
    <Label text = "Emp ID"></Label >
    <Input value="{/empStr/empNo}" enabled="{/empStr/alia}" width ="50%"/>
    <Label text = "Emp Name"></Label>
    <Input value= "{/empStr/eName}" width ="50%"/>
    <Label text = "Emp Slalary"></Label >
    <Input value="{= ${/empStr/eName} === 'krish'? 5000 : ${/empStr/salary} }" 
             enabled="{= ${/empStr/eName} === 'krish'? false : true}"  
             width ="50%"/>
    <Label text = "Currency"></Label >
    <Input value= "{/empStr/currency}" width ="50%"/>
    </f:content>
</f:SimpleForm>
    <Button text="Say Hi" press=".onShowHello"/>
  
    <Switch change="onSwtChange"></Switch>
    </content>



</Page>
    </App>
    </mvc:View>














   
